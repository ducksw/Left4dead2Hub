<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="./css/style.css">
  <title>L4D2 Hub</title>
</head>
<body id="body">
{{>nav}}

<section class="p-4 mt-4 bg-gradient bg-black text-light border border-dark rounded shadow-sm">
  <h2 class="h2 border-bottom pb-2 mb-3">Apariencia</h2>
  
  <div class="mb-2">
    <label for="tipo-anchura" class="form-label text-danger"><b>Tipo de ancho:</b></label>
    <select id="tipo-anchura" class="form-select w-50">
      <option value="centrado" id="centrado">Centrado</option>
      <option value="completo" id="completo">Completo</option>
    </select>
  </div>

<!--
  <br/>
  <span class="form-label text-danger"><b>Background Color:</b></span>
  -->
</section>

<script src="./js/get_layour.js"></script>
<script>
function widthType() {
  const select = document.getElementById('tipo-anchura').value;
  const body = document.body;

  if (select === "centrado") {
    body.style.maxWidth = "100%";
    body.style.width = "1300px";
    body.style.margin = "auto";

    const style = {
      maxWidth: "100%",
      width: "1300px",
      margin: "auto"
    };

    localStorage.setItem('layout', JSON.stringify(style));
    console.log("TIPO -> CENTRADO");

  } else if (select === "completo") {
    body.style.maxWidth = "100%";
    body.style.width = "100%";
    body.style.margin = "0";

    const style = {
      maxWidth: "100%",
      width: "100%",
      margin: "0"
    };

    localStorage.setItem('layout', JSON.stringify(style));
    console.log("TIPO -> COMPLETO");
  }
}

document.getElementById('tipo-anchura').addEventListener('click', function() {
  widthType()
});


</script>

</body>
</html>